{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["/*"],
      "@components/*": ["components/*"],
      "@service/*": ["service/*"],
      "@assets/*": ["assets/*"],
      "@themes/*": ["themes/*"],
      "@icons/*": ["assets/icons/*"], 
      "@constants/*": ["constants/*"], 
      "@styled/*": ["constants/styled/*"], 
      "@helpers/*": ["helpers/*"], 
      "@hooks/*": ["hooks/*"], 
    },
    "target": "es5",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["cypress", "@testing-library/cypress"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    ".storybook"
  ],
}